<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F1F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="66dp"
            android:layout_height="40dp"
            android:background="@drawable/task_btn_back_selector" />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:background="@drawable/bg_fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/task_icon_search" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginLeft="12dp"
                android:background="#D1D1D1" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入关键字"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#777"
                android:textColorHint="#DFDFDF"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_screen"
            android:layout_width="66dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/task_btn_screen_selector" />

    </LinearLayout>

</RelativeLayout>